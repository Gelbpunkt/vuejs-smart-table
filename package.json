{
  "name": "vuejs-smart-table",
  "keywords": [
    "vue",
    "table",
    "grid",
    "datagrid"
  ],
  "version": "0.0.5",
  "private": false,
  "main": "src/main.js",
  "author": "Hector Romero Granillo",
  "repository": "https://github.com/tochoromero/vuejs-smart-table",
  "license": "MIT",
  "scripts": {
    "build": "vue-cli-service build --target lib --name smart-table src/main.js",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit --reporter mocha-junit-reporter --reporter-options mochaFile=./tests/results/test_results.xml",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "dependencies": {
    "vue": "^3.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@vue/cli-plugin-babel": "^4.5.7",
    "@vue/cli-plugin-eslint": "^4.5.7",
    "@vue/cli-plugin-unit-mocha": "^4.5.7",
    "@vue/cli-service": "^4.5.7",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^1.1.0",
    "babel-eslint": "^10.1.0",
    "bootstrap": "^4.5.3",
    "chai": "^4.2.0",
    "eslint": "^7.11.0",
    "eslint-plugin-vue": "^7.1.0",
    "lint-staged": "^10.4.2",
    "mocha-junit-reporter": "^2.0.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^10.0.3",
    "vue-template-compiler": "^2.6.12",
    "vuepress": "^1.7.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
